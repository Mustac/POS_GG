@page
@model LoginModel

@{
    Layout = "~/Areas/Identity/Pages/Shared/_MyLayout.cshtml";
}


        <div class="bg-white p-3 m-3 rounded shadow" style="max-width:350px !important; width:100%;">
            <form id="account" method="post">
                <img src="images/gglogo.png" style="max-width:300px; width:100%;" class="mb-3 p-4 img-fluid" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.CompanyId" class="form-control" aria-required="true" placeholder="Company Id" />
                    <label asp-for="Input.CompanyId" class="form-label">Company Id</label>
                    <span asp-validation-for="Input.CompanyId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
              
                <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Sign in <i class="fa-solid fa-right-to-bracket"></i></button>
                </div>
            </form>
        </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
