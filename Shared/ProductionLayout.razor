@inherits LayoutComponentBase
@inject MobileMenuService MobileMenuService

<AutoRouting/>


<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider Style="margin-bottom:50px;"/>


<div class="container">
    @Body
</div>
<div class="mobile-menu text-dark">
    <div @onclick="@(()=>MobileMenuService.MobileNavClicked(Helpers.MobileNavigation.Order))" class="@(MobileMenuService.MobileNavigation==Helpers.MobileNavigation.Order?"active":"") no-select"><i class="fa-solid fa-list"></i> Order</div>
    <div @onclick="@(()=>MobileMenuService.MobileNavClicked(Helpers.MobileNavigation.History))" class="@(MobileMenuService.MobileNavigation==Helpers.MobileNavigation.History?"active":"") no-select"><i class="fa-solid fa-list-check"></i> History</div>
    <div @onclick="@(()=>MobileMenuService.MobileNavClicked(Helpers.MobileNavigation.Settings))" class="@(MobileMenuService.MobileNavigation==Helpers.MobileNavigation.Settings?"active":"") no-select"><i class="fa-solid fa-bars"></i></div>
</div>


